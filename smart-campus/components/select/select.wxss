.select-box {
  font-size: 30rpx;
  position: relative;
  width: 400rpx;
  margin-left: 30px;
}

.select-current {
  position: relative;
  padding: 0 10rpx;
  height: 66rpx;
  line-height: 66rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  box-sizing: border-box;
  margin: 0 10rpx;
}

.select-current::after {
  position: absolute;
  display: block;
  top: 26rpx;
  right: 16rpx;
  content: '';
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-top: 10rpx solid #999;
}

.current-name {
  display: block;
  width: 85%;
  height: 100%;
  word-wrap: normal;
  overflow: hidden;
}

.option-list {
  position: absolute;
  top: 72rpx;
  left: 10rpx;
  right: 10rpx;
  padding: 12rpx 20rpx 10rpx 20rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
  z-index: 99;
  box-shadow: 0rpx 10rpx 50rpx 10rpx rgba(85, 85, 85, 0.10);
  background-color: #fff;
}

.option {
  display: block;
  width: 100%;
  height: 66rpx;
  line-height: 66rpx;
  border-bottom: 1rpx solid #eee;
}

.option:last-child {
  border-bottom: none;
  padding-bottom: 0;
}